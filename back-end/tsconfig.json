{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "build",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"declaration": false,
		"pretty": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"importHelpers": true
	},
	"include": [
		"./**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}